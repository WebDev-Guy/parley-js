{
    "name": "ignite-parleyjs",
    "version": "1.0.0",
    "type": "module",
    "description": "Type-safe, secure cross-window communication with built-in origin validation, JSON Schema message validation, robust heartbeat monitoring, and defensive error handling",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsup",
        "build:dev": "set NODE_ENV=development && tsup",
        "build:prod": "set NODE_ENV=production && tsup",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write \"src/**/*.{ts,js,json,md}\" \"docs/**/*.md\" \"*.{json,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\" \"docs/**/*.md\" \"*.{json,md}\"",
        "lint": "npm run format:check && npm run typecheck",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest watch",
        "test:debug": "vitest --inspect-brk --single-thread",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "keywords": [
        "postmessage",
        "cross-window",
        "window",
        "tab",
        "iframe",
        "popup",
        "multi-window",
        "worker",
        "communication",
        "message-passing",
        "request-response",
        "broadcast",
        "state-synchronization",
        "origin-validation",
        "security",
        "payload-sanitization",
        "dos-prevention",
        "heartbeat",
        "heartbeat-monitoring",
        "schema-validation",
        "json-schema",
        "validation",
        "type-safe",
        "typescript",
        "analytics",
        "micro-frontends",
        "defensive-error-handling"
    ],
    "author": "Ignite Works, LLC",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/WebDev-Guy/parley-js.git"
    },
    "bugs": {
        "url": "https://github.com/WebDev-Guy/parley-js/issues"
    },
    "homepage": "https://www.parleyjs.com",
    "devDependencies": {
        "@types/node": "^24.10.1",
        "@vitest/coverage-v8": "^4.0.15",
        "@vitest/ui": "^4.0.15",
        "happy-dom": "^20.0.11",
        "prettier": "^3.7.3",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0",
        "vitepress": "^1.6.4",
        "vitest": "^4.0.15"
    },
    "engines": {
        "node": ">=20"
    },
    "overrides": {
        "esbuild": "^0.25.0"
    }
}
